{
	"comment": "TODO: Allow scgparameter in section name++",
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Septic",
	"scopeName": "source.septic",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#section"
		},
		{
			"include": "#tagmap"
		},
		{
			"comment": "Should be removed and fix grps etc explicitly using begin/end instead",
			"include": "#string" 
		},
		{
			"include": "#scgparameter"
		}
	],
	"repository": {
		"section": {
			"patterns": [
				{
					"match": "\\b(\\w*)\\b(:)[\\s]*([\\w\\*]*)",
					"captures": {
						"1": {
							"name": "keyword.control.septic"
						},
						"2": {
							"name": "punctuation.separator.key-value.mapping.septic"
						},
						"3": {
							"name": "entity.name.class.septic"
						}
					}
				}
			]
		},
		"tagmap": {
			"patterns": [
				{
					"include": "#tagmap_alg"
				},
				{
					"include": "#tagmap_default"
				}
			]
		},
		"tagmap_alg": {
			"comment": "Overrides regular tagmap for the Alg line in CalcPvr",
			"patterns": [
				{
					"match": "^\\s*\\b(Alg)\\b(=)[\\s]*(.*)",
					"captures": {
						"1": {
							"name": "entity.name.tag.septic"
						},
						"2": {
							"name": "punctuation.separator.key-value.mapping.septic"
						},
						"3": {
							"name": "variable.parameter.septic",
							"patterns": [
								{
									"include": "#scgparameter"
								},
								{
									"include": "#calc"
								},
								{
									"include": "#operator"
								},
								{
									"include": "#separator"
								},
								{
									"include": "#numeric"
								},
								{
									"include": "#line_comment"
								}
							]
						}
					}
				}
			]
		},
		"tagmap_default": {
			"patterns": [
				{
					"match": "\\b(\\w*)\\b(=)[\\s]*(.*)$",
					"captures": {
						"1": {
							"name": "entity.name.tag.septic"
						},
						"2": {
							"name": "punctuation.separator.key-value.mapping.septic"
						},
						"3": {
							"name": "variable.parameter.septic",
							"patterns": [
								{
									"include": "#bitfield"
								},
								{
									"include": "#numeric"
								},
								{
									"include": "#string"
								},
								{
									"include": "#line_comment"
								}
							]
						}
					}
				}
			]
		},
		"calc": {
			"name": "entity.name.function.septic",
			"begin": "\\w*\\(",
			"end": "\\)",
			"patterns": [
				{
					"include": "#scgparameter"
				},
				{
					"include": "#calc"
				},
				{
					"include": "#operator"
				},
				{
					"include": "#separator"
				},
				{
					"include": "#numeric"
				},
				{
					"name": "variable.parameter.function.septic",
					"match": "\\b\\w*\\b"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"include": "#block_comment"
				},
				{
					"include": "#line_comment"
				}
			]
		},
		"line_comment": {
			"patterns": [
				{
					"name": "comment.line.septic", 
					"match": "//.*$"
				}
			]	
		},
		"block_comment": {
			"patterns": [
				{
					"name": "comment.block.septic",
					"begin": "\\/\\*",
					"end": "\\*\\/"
				}
			]
		},
		"scgparameter": {
			"patterns": [
				{
					"name": "support.type",
					"begin": "\\{\\{\\s*",
					"end": "\\s*\\}\\}",
					"patterns": [
						{
							"name": "variable.other",
							"match": "\\b\\w*\\b"
						}
					]
				}
			]
		},
		"string": {
			"name": "string.quoted.double.septic",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.septic",
					"match": "\\\\."
				}
			]
		},
		"operator": {
			"name": "keyword.operator.septic",
			"match": "[+-/*<>]"
		},
		"separator": {
			"name": "punctuation.separator.parameters.septic",
			"match": "[, ]"
		},		
		"numeric": {
			"patterns": [
				{
					"match": "[+-]?\\b\\d*\\.*\\d+([eE][-+]?\\d+)*\\b",
					"name": "constant.numeric.septic"
				}
			]
		},
		"bitfield": {
			"patterns": [
				{
					"match": "([01]{25,})",
					"name": "constant.numeric.bitfield.septic",
					"captures": {
						"0": {
							"name": "constant.numeric.septic",
							"patterns": [
								{
									"include": "#bitfield_one"
								}
							]
						}
					}
				}
			]
		},
		"bitfield_one": {
			"patterns": [
				{
					"match": "1",
					"name": "markup.bold.septic"
				}
			]
		}
	}
}